<#include "/admin/layout/layout.ftl"><#import "/admin/layout/macro.ftl" as macro><#assign css></#assign><#assign js><script>    $(".btn-submit").click(function () {        console.log("点击")        $.ajax({            type: "POST",            url: "${ctx!}/orderInfo/change",            data: $(".form-edit").serialize(),            dataType: "JSON",            success: function(res){                layer.msg("添加成功", {time: 2000                }, function(){                    location.reload();                });            }        });    });</script></#assign><@layout title="订单编辑" active="orderInfo"><!-- Content Header (Page header) --><section class="content-header">    <h1>        用户编辑        <small>编辑用户详细信息</small>    </h1>    <ol class="breadcrumb">        <li><a href="#"><i class="fa fa-cog"></i> 系统</a></li>        <li><a href="#"><i class="fa fa-list-ul"></i> 订单管理</a></li>        <li class="active"><i class="fa fa-edit"></i> 订单编辑</li>    </ol></section><!-- Main content --><section class="content">    <div class="row">        <div class="col-md-10">            <!-- Default box -->            <div class="box  box-primary">                <form class="form-horizontal form-edit" method="post" action="${ctx!}/orderInfo/change">                    <div class="box-body">                            <input type="hidden" id="id" name="id" value="${(orderInfo.id)!}">                            <input type="hidden" id="userid" name="userid" value="${(orderInfo.userid)!}">                        <div class="form-group">                            <label class="col-sm-2 control-label">景点：</label>                            <div class="col-sm-10">                                    <input id="ticketname" name="ticketname" class="form-control" type="text" value="${(orderInfo.ticketname)!}">                            </div>                        </div>                        <div class="form-group">                            <label class="col-sm-2 control-label">旅客：</label>                            <div class="col-sm-10">                                    <input id="travelname" name="travelname" class="form-control" type="text" value="${(orderInfo.travelname)!}">                            </div>                        </div>                        <div class="form-group">                            <label class="col-sm-2 control-label">票价：</label>                            <div class="col-sm-10">                                    <input id="price" name="price" class="form-control" type="text" value="${(orderInfo.price?c)!}">                            </div>                        </div>                        <div class="form-group">                            <label class="col-sm-2 control-label">旅行天数：</label>                            <div class="col-sm-10">                                <input id="traveldays" name="traveldays" class="form-control" type="text" value="${(orderInfo.traveldays?c)!}">                            </div>                        </div>                        <div class="form-group">                            <label class="col-sm-2 control-label">购买日期：</label>                            <div class="col-sm-10">                                <#if (orderInfo.id)??>                                    <input type="date" id="buydate" name="buydate" class="form-control"  value="${(orderInfo.buydate?string('yyyy-MM-dd'))!}" min="${.now?string("yyyy-MM-dd")}"readonly/>                                <#else>                                    <input type="date" id="buydate" name="buydate" class="form-control"  value="${.now?string("yyyy-MM-dd")}" min="${.now?string("yyyy-MM-dd")}"/>                                </#if>                                 </div>                        </div>                        <div class="form-group">                            <label class="col-sm-2 control-label">出行日期：</label>                            <div class="col-sm-10">                                <input type="date" id="godate" name="godate" class="form-control"  value="${(orderInfo.godate?string('yyyy-MM-dd'))!}"                                       min="${(orderInfo.buydate?string('yyyy-MM-dd'))!}"/>                            </div>                        </div>                    </div>                    <div class="box-footer">                        <a type="button" class="btn btn-default btn-back" href="${ctx!}/orderInfo/index/1">返回</a>                        <button type="button" class="btn btn-info pull-right btn-submit">提交</button>                    </div>                </form>            </div>            <!-- /.box -->        </div>    </div></section><!-- /.content --></@layout>