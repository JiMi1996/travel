<#include "/admin/layout/layout.ftl"><#import "/admin/layout/macro.ftl" as macro><#assign css><style></style></#assign><#assign js><script>    function del(id) {        layer.confirm('确定删除吗?', {icon: 3, title: '提示'}, function (index) {            $.ajax({                type: "GET",                dataType: "text",                url: "${ctx!}/orderInfo/delete/" + id,                success: function (res) {                    layer.msg("删除成功", {time: 2000}, function () {                        location.reload();                    });                },                error:function () {                    layer.msg("删除成功", {time: 2000}, function () {                        location.reload();                    });                }            });        }        );    }</script></#assign><@layout title="订单管理" active="orderInfo"><!-- Content Header (Page header) --><section class="content-header">    <h1>        订单列表        <small>一切从这里开始</small>    </h1>    <ol class="breadcrumb">        <li><a href="#"><i class="fa fa-cog"></i> 系统</a></li>        <li><a href="#"><i class="fa fa-list-ul"></i> 订单管理</a></li>        <li class="active"><i class="fa fa-table"></i> 订单列表</li>    </ol></section><!-- Main content --><section class="content">    <!-- Default box -->    <div class="box box-primary">        <div class="box-header">        <#--<@shiro.hasPermission name="system:user:add">-->        <#--</@shiro.hasPermission>-->        </div>        <div class="box-body">            <table class="table table-striped">                <tr>                    <th>ID</th>                    <th>购买用户</th>                    <th>景点名</th>                    <th>旅游姓名</th>                    <th>票价</th>                    <th>旅行天数</th>                    <th>购买时间</th>                    <th>出行时间</th>                    <th>操作</th>                </tr>                <#list PageInfo.data as userInfo>                <tr>                    <td>${(userInfo.orderInfo.id)!}</td>                    <td>${(userInfo.userName)!}</td>                    <td>${(userInfo.orderInfo.ticketname)!}</td>                    <td>${(userInfo.orderInfo.travelname)!}</td>                    <td>${(userInfo.orderInfo.price?c)!}</td>                    <td>${(userInfo.orderInfo.traveldays?c)!}</td>                    <td>${((userInfo.orderInfo.buydate)?string("yyyy-MM-dd"))!}</td>                    <td>${((userInfo.orderInfo.godate)?string("yyyy-MM-dd"))!}</td>                    <td>                    <#--<@shiro.hasPermission name="system:user:edit">-->                        <#--<a class="btn btn-sm btn-primary" href="${ctx!}/orderInfo/edit/${userInfo.orderInfo.id}">编辑</a>-->                    <#--</@shiro.hasPermission>-->                    <#--<@shiro.hasPermission name="system:user:deleteBatch">-->                        <button class="btn btn-sm btn-danger" onclick="del(${userInfo.orderInfo.id})">删除</button>                    <#--</@shiro.hasPermission>-->                    </td>                </tr>                </#list>            </table>        </div>        <!-- /.box-body -->        <div class="box-footer clearfix">            <a class="btn btn-sm btn-primary" href="${ctx!}/orderInfo/index/1">首页</a>        <#if PageInfo.currentPage == 1>            <a class="btn btn-sm btn-primary" href="${ctx!}/orderInfo/index/1">上一页</a>        <#else>            <a class="btn btn-sm btn-primary" href="${ctx!}/orderInfo/index/${PageInfo.currentPage-1}">上一页</a>        </#if>        <#if PageInfo.currentPage < PageInfo.count/10>            <a class="btn btn-sm btn-primary" href="${ctx!}/orderInfo/index/${PageInfo.currentPage+1}">下一页</a>        <#else>            <a class="btn btn-sm btn-primary" href="${ctx!}/orderInfo/index/${PageInfo.currentPage}">下一页</a>        </#if>            <a class="btn btn-sm btn-primary" href="${ctx!}/orderInfo/index/${(PageInfo.count/10)?ceiling}">尾页</a>        <#--<@macro.list userList=userList url="${ctx!}/admin/user/index?" />-->        </div>    </div>    <!-- /.box --></section><!-- /.content --></@layout>