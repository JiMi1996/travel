<#include "/admin/layout/layout.ftl"><#import "/admin/layout/macro.ftl" as macro><#assign css></#assign><#assign js><script>    $(".btn-submit").click(function () {        $.ajax({            type: "POST",            url: "${ctx!}/ticket/change",            data: $("#form").serialize(),            dataType: "JSON",            success: function(res){                layer.msg("添加成功", {time: 2000                }, function(){                    location.reload();                });            }        });    });    $("#file").change(function () {        var fileName = $("#file")[0].files[0]['name'];        $("#inco").val(fileName);    });    $("#file_btn").click(function () {        var formData = new FormData($("#form_upload")[0]);        $.ajax({            type: "POST",            url: "${ctx!}/upload",            enctype:'multipart/form-data',            data:formData,            dataType:"text",            async:false,            cache:false,            contentType:false,            processData:false,            success: function(res){                layer.msg("上传成功", {time: 2000                }, function(){                    location.reload();                });            }        });    });</script></#assign><@layout title="旅票编辑" active="ticket"><!-- Content Header (Page header) --><section class="content-header">    <h1>        旅票编辑        <small>编辑旅票详细信息</small>    </h1>    <ol class="breadcrumb">        <li><a href="#"><i class="fa fa-cog"></i> 系统</a></li>        <li><a href="#"><i class="fa fa-list-ul"></i> 旅票管理</a></li>        <li class="active"><i class="fa fa-edit"></i> 旅票编辑</li>    </ol></section><!-- Main content --><section class="content">    <div class="row">        <div class="col-md-10">            <!-- Default box -->            <div class="box  box-primary">                <form  id="form" class="form-horizontal form-edit" method="post" action="${ctx!}/ticket/change">                    <div class="box-body">                        <input type="hidden" id="id" name="id" value="${(ticket.id)!}">                        <div class="form-group">                            <label class="col-sm-2 control-label">景点：</label>                            <div class="col-sm-10">                                <input id="name" name="name" class="form-control" type="text" value="${(ticket.name)!}">                            </div>                        </div>                        <div class="form-group">                            <label class="col-sm-2 control-label">票价：</label>                            <div class="col-sm-10">                                <input id="price" name="price" class="form-control" type="text" value="${(ticket.price?c)!}">                            </div>                        </div>                        <div class="form-group">                            <label class="col-sm-2 control-label">旅游天数：</label>                            <div class="col-sm-10">                                <input id="traveldays" name="traveldays" class="form-control" type="text" value="${(ticket.traveldays?c)!}">                            </div>                        </div>                        <div class="form-group">                            <label class="col-sm-2 control-label">旅游人数：</label>                            <div class="col-sm-10">                                <input id="travepeoples" name="travepeoples" class="form-control" type="text" value="${(ticket.travepeoples?c)!}">                            </div>                        </div>                        <input id="inco" name="inco" class="form-control" type="hidden"  value="${(ticket.inco)!}">                    </div>                </form>                <form id="form_upload" class="form-horizontal form-edit" enctype="multipart/form-data">                    <div class="form-group">                        <label class="col-sm-2 control-label">图片：</label>                        <div class="col-sm-10">                            <input id="file" name="file" type="file" style="float: left">                            <button id="file_btn" type="button" class="btn btn-info" style="float: left">上传</button>                        </div>                    </div>                    <div class="form-group">                        <div class="col-sm-10 col-sm-offset-3">                            <img id="img" src="http://127.0.0.1:8080/assets/img/${(ticket.inco)!}" style="width: auto;height: 150px;"/>                        </div>                    </div>                </form>                <div class="box-footer">                    <a type="button" class="btn btn-default btn-back" href="${ctx!}/ticket/index/1">返回</a>                    <button type="button" class="btn btn-info pull-right btn-submit">提交</button>                </div>            </div>            <!-- /.box -->        </div>    </div></section><!-- /.content --></@layout>